<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Siete y medio"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitulo"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:padding="15dp"
            android:src="@drawable/carta2" />


        <Button
            android:id="@+id/btn1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="Tomar una carta"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_baseline_play_arrow_24" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/black"
            android:text="Plantarse"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_baseline_front_hand_24" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/image"
            android:backgroundTint="@color/black"
            app:cornerRadius="15dp"
            app:icon="@drawable/ic_baseline_replay_24"
            app:iconPadding="2dp"
            app:iconTint="#FFFFFF" />

        <TextView
            android:id="@+id/tvMaquina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"

            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaquina"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</ScrollView>